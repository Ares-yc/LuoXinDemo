<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp">

        <ImageView
            android:id="@+id/iv_item_course_type_icon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="14dp"
            android:background="@drawable/ic_menu_all"/>

        <TextView
            android:id="@+id/tv_item_course_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/iv_item_course_type_icon"
            android:layout_marginStart="6dp"
            android:text="全部课程"
            android:textSize="14sp"
            android:textColor="#303030"/>

        <ImageView
            android:id="@+id/iv_item_course_type_arrow"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="14dp"
            android:background="@drawable/ic_arrow_right"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_item_course_type_small"
        android:layout_marginStart="42dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>